    </div>
  </div>
</section>

<style>
  .diabetes-types-section {
    padding: var(--section-padding, 4rem 0);
    position: relative;
    max-width: var(
      --section-max-width,
      1200px
    ); /* Ensure section has a max-width */
    margin: 0 auto; /* Center the entire section */
  }

  /* Section Header */
  .section-header {
    max-width: var(--section-max-width, 1200px);
    margin: 0 auto;
    padding: 0 var(--section-padding-x, 1.5rem);
    text-align: center;
    margin-bottom: 3rem;
  }

  .header-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .section-subtitle {
    color: var(--primary-color, #2563eb);
    font-size: 1rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin: 0 0 0.5rem 0;
  }

  .section-title {
    color: var(--title-color, #1e293b);
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1.2;
    margin: 0 0 1rem 0;
  }

  .section-description {
    color: var(--text-color, #4a5568);
    font-size: 1.125rem;
    line-height: 1.6; /* Fixed typo from '1' to '1.6' for consistency */
    margin: 0;
  }

  /* Types Grid */
  .types-grid {
    max-width: var(--section-max-width, 1200px); /* Match section max-width */
    margin: 0 auto; /* Center the grid horizontally */
    padding: 0 var(--section-padding-x, 1.5rem);
    display: grid;
    gap: var(--grid-gap, 2rem);
    justify-content: center; /* Center grid items within the grid */
  }

  .types-grid--grid {
    grid-template-columns: repeat(
      auto-fit,
      minmax(350px, 1fr)
    ); /* Flexible columns */
  }

  .types-grid--masonry {
    grid-template-columns: repeat(var(--grid-columns, 2), 1fr);
    grid-auto-rows: minmax(200px, auto); /* Adjusted for masonry layout */
  }

  /* Section Footer */
  .section-footer {
    max-width: var(--section-max-width, 1200px);
    margin: 3rem auto 0;
    padding: 0 var(--section-padding-x, 1.5rem);
  }

  .footer-content {
    background: var(--footer-bg, #ffffff);
    border: 1px solid var(--border-color, #e2e8f0);
    border-radius: 16px;
    padding: 2rem;
    text-align: center;
  }

  .footer-note {
    color: var(--text-color, #4a5568);
    font-size: 0.95rem;
    line-height: 1.6;
    margin: 0 0 1.5rem 0;
  }

  .footer-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .consultation-btn,
  .resources-btn {
    background: var(--primary-color, #2563eb);
    color: white;
    border: none;
    padding: 0.75rem 1.5rem;
    border-radius: 8px;
    font-size: 0.875rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .resources-btn {
    background: var(--secondary-color, #6b7280);
  }

  .consultation-btn:hover {
    background: var(--primary-color-dark, #1d4ed8);
    transform: translateY(-1px);
  }

  .resources-btn:hover {
    background: var(--secondary-color-dark, #4b5563);
    transform: translateY(-1px);
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .diabetes-types-section {
      padding: var(--section-padding-mobile, 2rem 0);
    }

    .section-header {
      margin-bottom: 2rem;
    }

    .section-title {
      font-size: 2rem;
    }

    .section-description {
      font-size: 1rem;
    }

    .types-grid {
      grid-template-columns: 1fr; /* Single column for mobile */
      gap: var(--grid-gap-mobile, 1.5rem);
      justify-content: center; /* Ensure centering on mobile */
    }

    .footer-actions {
      flex-direction: column;
      align-items: center;
    }

    .consultation-btn,
    .resources-btn {
      width: 100%;
      max-width: 250px;
    }
  }

  @media (min-width: 769px) and (max-width: 1024px) {
    .types-grid--grid {
      grid-template-columns: repeat(2, 1fr);
      justify-content: center; /* Center items in tablet view */
    }
  }

  @media (min-width: 1025px) {
    .section-title {
      font-size: 3rem;
    }

    .types-grid--grid {
      grid-template-columns: repeat(3, 1fr); /* Three columns for desktop */
      justify-content: center; /* Center items */
    }
  }

  /* Accessibility */
  .consultation-btn:focus,
  .resources-btn:focus {
    outline: 2px solid var(--primary-color, #2563eb);
    outline-offset: 2px;
  }

  /* High contrast mode */
  @media (prefers-contrast: high) {
    .footer-content {
      border-width: 2px;
    }
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .consultation-btn,
    .resources-btn {
      transition: none;
    }

    .consultation-btn:hover,
    .resources-btn:hover {
      transform: none;
    }
  }

  /* Print styles */
  @media print {
    .diabetes-types-section {
      background: #ffffff !important;
    }

    .footer-actions {
      display: none;
    }
  }
</style>

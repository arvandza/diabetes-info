---
// Single Responsibility: Only renders the brand/logo
interface Props {
  brandName: string;
  href?: string;
  className?: string;
}

const { brandName, href = "/", className = "" } = Astro.props;
---

<a href={href} class={`nav-brand ${className}`}>
  {brandName}
</a>

<style>
  .nav-brand {
    font-size: 1.5rem;
    font-weight: bold;
    color: var(--primary-color, #2563eb);
    text-decoration: none;
    transition: color var(--transition-speed, 0.3s);
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .nav-brand:hover {
    color: var(--hover-color, #1d4ed8);
  }

  .nav-brand:focus {
    outline: 2px solid var(--primary-color, #2563eb);
    outline-offset: 2px;
    border-radius: 4px;
  }
</style>

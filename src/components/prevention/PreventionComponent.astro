---
const strategiList = [
  {
    icon: "/images/diet.png",
    title: "Diet Sehat",
    description:
      "Fokus pada biji-bijian utuh, protein rendah lemak, buah-buahan, dan sayuran. Batasi makanan olahan dan minuman manis.",
    details: [
      "✔ Konsumsi 5 porsi sayuran dan buah setiap hari.",
      "✔ Pilih karbohidrat kompleks seperti quinoa atau beras merah.",
      "✔ Hindari minuman berkalori tinggi seperti soda.",
    ],
  },
  {
    icon: "/images/exercise.png",
    title: "Olahraga Teratur",
    description:
      "Targetkan setidaknya 150 menit aktivitas aerobik intensitas sedang per minggu.",
    details: [
      "✔ Jangan melakukan olahraga bila kadar gula darah mencapai 200 gr/dl",
      "✔ Makan atau minum karbohidrat ekstra bila gula darah kurang dari 100 gr/dl",
      "✔ Melakukan Olahraga Pagi (Jam 06.00-08.00) dengan durasi 25-45 Menit (Jogging, Renang, Senam)",
      "✔ Melakukan Olahraga Sore (Jam 16.00-18.00) dengan durasi 25-45 Menit (Jogging, Renang)",
    ],
  },
  {
    icon: "/images/weight.png",
    title: "Pengelolaan Berat Badan",
    description:
      "Pertahankan berat badan sehat melalui diet seimbang dan aktivitas fisik teratur.",
    details: [
      "✔ Pantau asupan kalori harian Anda.",
      "✔ Tetapkan target penurunan berat badan 0.5-1 kg per minggu.",
      "✔ Konsultasikan dengan ahli gizi untuk rencana personal.",
    ],
  },
];
---

<section class="strategi-modern-section">
  <h2 class="strategi-modern-title">
    Langkah atau Strategi Penanganan Diabetes
  </h2>
  <p class="strategi-modern-subtitle">
    Berikut adalah beberapa langkah penting untuk membantu mengelola diabetes
    secara efektif dan berkelanjutan.
  </p>
  <button id="notifTrigger" class="strategi-notif-btn">
    Aktifkan Notifikasi Harian
  </button>

  <div class="strategi-modern-list">
    {
      strategiList.map((item, index) => (
        <div class="strategi-modern-card fade-in">
          <div class="strategi-modern-icon">
            <img src={item.icon} alt={item.title} />
          </div>
          <div class="strategi-modern-content">
            <div class="strategi-header">
              <h3>{item.title}</h3>
              <button
                class="strategi-dropdown-btn"
                aria-expanded="false"
                aria-controls={`dropdown-${index}`}
              >
                <svg
                  class="arrow"
                  width="12"
                  height="12"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <path d="M19 9l-7 7-7-7" />
                </svg>
              </button>
            </div>
            <p>{item.description}</p>
            <div class="strategi-dropdown-content" id={`dropdown-${index}`}>
              <ul>
                {item.details.map((detail, i) => (
                  <li key={i}>{detail}</li>
                ))}
              </ul>
            </div>
          </div>
        </div>
      ))
    }
  </div>
</section>

<style>
  .strategi-modern-section {
    padding: 4rem 1rem;
    background: #f1f5f9;
    text-align: center;
  }

  .strategi-modern-title {
    color: #2563eb;
    font-size: 2.2rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
  }

  .strategi-modern-subtitle {
    font-size: 1rem;
    color: #475569;
    max-width: 700px;
    margin: 0 auto 2.5rem auto;
  }

  .strategi-modern-list {
    display: flex;
    flex-direction: column;
    gap: 1.8rem;
    max-width: 900px;
    margin: 0 auto;
  }

  .strategi-modern-card {
    display: flex;
    align-items: flex-start;
    background: #ffffff;
    border-radius: 12px;
    padding: 1.5rem;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.05);
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
  }

  .strategi-modern-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 16px 30px rgba(0, 0, 0, 0.08);
  }

  .strategi-modern-icon img {
    width: 82px;
    height: 82px;
  }

  .strategi-modern-icon {
    flex-shrink: 0;
    margin-right: 1.5rem;
  }

  .strategi-modern-content {
    flex: 1;
    text-align: left;
  }

  .strategi-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.4rem;
  }

  .strategi-modern-content h3 {
    font-size: 1.2rem;
    color: #1f2937;
    font-weight: 600;
  }

  .strategi-modern-content p {
    font-size: 0.95rem;
    color: #4b5563;
    line-height: 1.5;
    margin-bottom: 0.5rem;
  }

  /* Dropdown Styles */
  .strategi-dropdown-btn {
    width: 30px;
    height: 30px;
    border-radius: 50%;
    background: transparent;
    border: 2px solid #2563eb;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition:
      border-color 0.3s ease,
      transform 0.3s ease;
  }

  .strategi-dropdown-btn:hover {
    border-color: #1e40af;
    transform: rotate(90deg);
  }

  .arrow {
    color: #2563eb;
    transition: transform 0.3s ease;
  }

  .strategi-dropdown-btn[aria-expanded="true"] .arrow {
    transform: rotate(180deg);
  }

  .strategi-dropdown-content {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease-out;
  }

  .strategi-dropdown-content.show {
    max-height: 200px; /* Sesuaikan dengan kebutuhan */
  }

  .strategi-dropdown-content ul {
    list-style: none;
    padding: 0;
    margin: 0.5rem 0 0 0;
  }

  .strategi-dropdown-content li {
    font-size: 0.9rem;
    color: #4b5563;
    padding: 0.5rem 0;
    border-bottom: 1px solid #f1f5f9;
  }

  .strategi-dropdown-content li:last-child {
    border-bottom: none;
  }

  /* Animasi Fade-In */
  .fade-in {
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 0.8s ease forwards;
  }

  .strategi-notif-btn {
    background-color: #2563eb;
    color: #ffffff;
    padding: 12px 20px;
    border: none;
    border-radius: 8px;
    font-weight: 600;
    font-size: 1rem;
    cursor: pointer;
    margin-bottom: 1.5rem;
    transition: background 0.3s;
  }

  .strategi-notif-btn:hover {
    background-color: #1e40af;
  }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Responsif */
  @media (max-width: 640px) {
    .strategi-modern-card {
      flex-direction: column;
      text-align: center;
    }

    .strategi-modern-icon {
      margin-right: 0;
      margin-bottom: 1rem;
    }

    .strategi-modern-content {
      text-align: center;
    }

    .strategi-header {
      justify-content: center;
      flex-direction: column;
      gap: 0.5rem;
    }

    .strategi-modern-content h3,
    .strategi-modern-content p {
      text-align: center;
    }
  }
</style>

<script>
  if (typeof window !== "undefined") {
    document.addEventListener("DOMContentLoaded", () => {
      // Notification Button
      const btn = document.getElementById("notifTrigger");
      if (btn && "Notification" in window) {
        btn.addEventListener("click", async (e) => {
          e.preventDefault();
          const permission = await Notification.requestPermission();
          if (permission === "granted") {
            new Notification("Notifikasi Aktif!", {
              body: "Anda akan diingatkan untuk menjaga pola hidup sehat!",
              icon: "/icons/notif-icon.png",
            });
          } else {
            alert("Notifikasi tidak diizinkan.");
          }
        });
      }

      // Dropdown Toggle
      const dropdownButtons = document.querySelectorAll(
        ".strategi-dropdown-btn"
      );
      dropdownButtons.forEach((button) => {
        button.addEventListener("click", () => {
          const dropdownContent =
            button.parentElement.nextElementSibling.nextElementSibling;
          const isExpanded = button.getAttribute("aria-expanded") === "true";

          // Close all other dropdowns
          document
            .querySelectorAll(".strategi-dropdown-content.show")
            .forEach((content) => {
              if (content !== dropdownContent) {
                content.classList.remove("show");
                const otherButton = content.parentElement.querySelector(
                  ".strategi-dropdown-btn"
                );
                otherButton.setAttribute("aria-expanded", "false");
              }
            });

          // Toggle current dropdown
          dropdownContent.classList.toggle("show");
          button.setAttribute("aria-expanded", !isExpanded);
        });
      });

      // Close dropdown when clicking outside
      document.addEventListener("click", (e) => {
        if (!e.target.closest(".strategi-modern-content")) {
          document
            .querySelectorAll(".strategi-dropdown-content.show")
            .forEach((content) => {
              content.classList.remove("show");
              const button = content.parentElement.querySelector(
                ".strategi-dropdown-btn"
              );
              button.setAttribute("aria-expanded", "false");
            });
        }
      });
    });
  }
</script>

---
// Import sub-components (Single Responsibility Principle)
import FooterContent from "./footer/FooterContent.astro";
import FooterCredits from "./footer/FooterCredits.astro";

// Simplified interface for the footer component
interface Props {
  brandName?: string;
  description?: string;
  createdBy?: string;
  links?: Array<{
    title: string;
    items: Array<{
      text: string;
      href: string;
    }>;
  }>;
  socialLinks?: Array<{
    name: string;
    href: string;
    icon: string;
  }>;
  theme?: "dark" | "light" | "medical";
  className?: string;
  showWaveTop?: boolean;
}

const {
  brandName = "DiabetesInfo",
  description = "Kenali Diabetes Mellitus: Hidup Sehat, Bebas Komplikasi",
  createdBy = "Diana Lutfiyah, S.Kep",
  links = [],
  socialLinks = [],
  theme = "medical",
  className = "",
  showWaveTop = false,
} = Astro.props;

// Default social links for medical/health website
const defaultSocialLinks = [
  {
    name: "Email",
    href: "mailto:info@diabetesinfo.com",
    icon: "ðŸ“§",
  },
  {
    name: "Phone",
    href: "tel:+1234567890",
    icon: "ðŸ“ž",
  },
  {
    name: "Location",
    href: "#contact",
    icon: "ðŸ“",
  },
];

const finalSocialLinks =
  socialLinks.length > 0 ? socialLinks : defaultSocialLinks;
---

<footer
  class={`footer footer--${theme} ${className}`}
  data-footer
  role="contentinfo"
  aria-label="Website footer"
>
  {
    showWaveTop && (
      <div class="footer-wave" aria-hidden="true">
        <svg viewBox="0 0 1200 120" preserveAspectRatio="none">
          <path
            d="M0,0V46.29c47.79,22.2,103.59,32.17,158,28,70.36-5.37,136.33-33.31,206.8-37.5C438.64,32.43,512.34,53.67,583,72.05c69.27,18,138.3,24.88,209.4,13.08,36.15-6,69.85-17.84,104.45-29.34C989.49,25,1113-14.29,1200,52.47V0Z"
            opacity=".25"
          />
          <path
            d="M0,0V15.81C13,36.92,27.64,56.86,47.69,72.05,99.41,111.27,165,111,224.58,91.58c31.15-10.15,60.09-26.07,89.67-39.8,40.92-19,84.73-46,130.83-49.67,36.26-2.85,70.9,9.42,98.6,31.56,31.77,25.39,62.32,62,103.63,73,40.44,10.79,81.35-6.69,119.13-24.28s75.16-39,116.92-43.05c59.73-5.85,113.28,22.88,168.9,38.84,30.2,8.66,59,6.17,87.09-7.5,22.43-10.89,48-26.93,60.65-49.24V0Z"
            opacity=".5"
          />
          <path d="M0,0V5.63C149.93,59,314.09,71.32,475.83,42.57c43-7.64,84.23-20.12,127.61-26.46,59-8.63,112.48,12.24,165.56,35.4C827.93,77.22,886,95.24,951.2,90c86.53-7,172.46-45.71,248.8-84.81V0Z" />
        </svg>
      </div>
    )
  }

  <div class="footer-container">
    <!-- Main Footer Content -->
    <FooterContent
      brandName={brandName}
      description={description}
      links={links}
      socialLinks={finalSocialLinks}
    />

    <!-- Footer Credits -->
    <FooterCredits
      createdBy={createdBy}
      brandName={brandName}
      showDivider={true}
    />
  </div>
</footer>

<style>
  .footer {
    background: var(
      --footer-bg,
      linear-gradient(135deg, #1e293b 0%, #334155 100%)
    );
    color: var(--footer-text, #ffffff);
    position: relative;
    margin-top: auto;
    overflow: hidden;
  }

  .footer-container {
    max-width: var(--footer-max-width, 1200px);
    margin: 0 auto;
    padding: var(--footer-padding, 3rem 1.5rem 1.5rem);
    position: relative;
    z-index: 2;
    display: flex;
    flex-direction: column;
    min-height: 200px;
  }

  /* Wave decoration */
  .footer-wave {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    overflow: hidden;
    line-height: 0;
    transform: rotate(180deg);
  }

  .footer-wave svg {
    position: relative;
    display: block;
    width: calc(100% + 1.3px);
    height: 60px;
    fill: var(--footer-wave-color, #f8fafc);
  }

  /* Theme Variants */
  .footer--dark {
    --footer-bg: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
    --footer-text: #ffffff;
    --footer-brand-color: #ffffff;
    --footer-text-light: rgba(255, 255, 255, 0.8);
    --footer-text-muted: rgba(255, 255, 255, 0.6);
    --footer-accent-color: #3b82f6;
    --footer-accent-hover: #60a5fa;
    --footer-divider-color: rgba(255, 255, 255, 0.2);
    --footer-wave-color: #f8fafc;
  }

  .footer--light {
    --footer-bg: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
    --footer-text: #1e293b;
    --footer-brand-color: #1e293b;
    --footer-text-light: #4a5568;
    --footer-text-muted: #6b7280;
    --footer-accent-color: #2563eb;
    --footer-accent-hover: #1d4ed8;
    --footer-divider-color: rgba(0, 0, 0, 0.1);
    --footer-wave-color: #ffffff;
  }

  .footer--medical {
    --footer-bg: linear-gradient(135deg, #1e293b 0%, #2563eb 100%);
    --footer-text: #ffffff;
    --footer-brand-color: #ffffff;
    --footer-text-light: rgba(255, 255, 255, 0.9);
    --footer-text-muted: rgba(255, 255, 255, 0.7);
    --footer-accent-color: #60a5fa;
    --footer-accent-hover: #93c5fd;
    --footer-divider-color: rgba(255, 255, 255, 0.2);
    --footer-wave-color: #f8fafc;
  }

  /* CSS Custom Properties */
  .footer {
    --footer-transition: 0.3s ease;
    --footer-gap: 2rem;
    --footer-gap-md: 3rem;
    --footer-gap-lg: 4rem;
    --footer-links-gap: 2rem;
    --footer-credits-spacing: 1.5rem;
    --footer-credits-spacing-lg: 2rem;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .footer-container {
      padding: var(--footer-padding-mobile, 2rem 1rem 1rem);
    }

    .footer-wave svg {
      height: 40px;
    }
  }

  @media (min-width: 769px) and (max-width: 1024px) {
    .footer-container {
      padding: var(--footer-padding-tablet, 3rem 2rem 1.5rem);
    }

    .footer-wave svg {
      height: 50px;
    }
  }

  @media (min-width: 1025px) {
    .footer-container {
      padding: var(--footer-padding-desktop, 4rem 2rem 2rem);
    }

    .footer-wave svg {
      height: 80px;
    }
  }

  /* Background decoration */
  .footer::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(
        circle at 20% 80%,
        rgba(59, 130, 246, 0.1) 0%,
        transparent 50%
      ),
      radial-gradient(
        circle at 80% 20%,
        rgba(37, 99, 235, 0.1) 0%,
        transparent 50%
      );
    pointer-events: none;
    z-index: 1;
  }

  /* Accessibility */
  .footer:focus-within {
    outline: none;
  }

  /* High contrast mode */
  @media (prefers-contrast: high) {
    .footer {
      border-top: 3px solid currentColor;
    }

    .footer-wave {
      display: none;
    }
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .footer * {
      animation: none !important;
      transition: none !important;
    }
  }

  /* Print styles */
  @media print {
    .footer {
      background: #ffffff !important;
      color: #000000 !important;
      border-top: 2px solid #000000;
      page-break-inside: avoid;
    }

    .footer-wave {
      display: none;
    }

    .footer::before {
      display: none;
    }
  }
</style>
